#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(
    # Brace expansion needs shell supporting it like in bash,zsh,fish,ksh
    fd --type d --hidden --follow \
      --exclude "{.git,node_modules,.cache,.var,.vscode,.docker,.nvm,.java,.npm}" \
      . ~/ 2>/dev/null | fzf --height ~40% --layout reverse --border
  )
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s "$selected_name" -c "$selected"
  exit 0
fi

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
  tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux switch-client -t "$selected_name" || tmux attach -t "$selected_name"
